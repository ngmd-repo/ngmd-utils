{
  "hosting": [
    {
      "target": "docs",
      "public": "dist/docs/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    },
    {
      "target": "docs-en",
      "public": "dist/docs-en/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [{ "source": "**", "destination": "/index.html" }]
    }
  ]
}
